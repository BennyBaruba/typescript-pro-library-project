{
  "name": "typescript-pro-library-project",
  "version": "1.1.1",
  "description": "A micro library written from scratch to take advantage of the power of TypeScript",
  "main": "build/index.umd.js",
  "typings": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "prebuild": "rm -rf dist && rm -rf build",
    "build": "tsc -p tsconfig.json && rollup -c rollup.config.js",
    "postbuild": "cp dist/*.d.ts build/",
    "precommit": "npm test && lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JamesHenry/typescript-pro-library-project.git"
  },
  "author": "James Henry",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JamesHenry/typescript-pro-library-project/issues"
  },
  "homepage": "https://github.com/JamesHenry/typescript-pro-library-project#readme",
  "devDependencies": {
    "@types/jest": "^20.0.4",
    "@types/node": "^8.0.14",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "rollup": "^0.45.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "ts-jest": "^20.0.7",
    "typescript": "^2.4.2"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --no-semi --single-quote --trailing-comma es5",
      "git add"
    ]
  }
}
